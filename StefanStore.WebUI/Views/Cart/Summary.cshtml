@model StefanStoreDTO.CartDto.CartDto

<div id="cart">
    <span class="caption">
        <b>Your cart:</b>
        @Model.Lines.Sum(x => x.Quantity) item(s),
        @Model.ComputeTotalValue().ToString("c")
    </span>
    @if (ViewBag.IsCheckOutLinkVisible)
    {
        @Html.ActionLink("Checkout", "ListCartItems");
    }
</div>
